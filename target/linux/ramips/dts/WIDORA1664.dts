/dts-v1/;

/include/ "mt7628an.dtsi"

/ {
	compatible = "widora", "mediatek,mt7628an-soc";
	model = "WIDORA-BIT5";

	chosen { // update: delete output kernel info at 2021.06.03
		bootargs = "console=none"; // ttyS0,115200
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x4000000>;
	};

	pinctrl {
		state_default: pinctrl0 {
			gpio {
				ralink,group = "gpio";
				ralink,function = "gpio";
			};
			perst {
				ralink,group = "perst";
				ralink,function = "gpio";
			};
			refclk {
				ralink,group = "refclk";
				ralink,function = "gpio";
			};
			i2s {
				ralink,group = "i2s";
				ralink,function = "gpio"; // default:i2s 
			};
			i2c {
				ralink,group = "i2c";
				ralink,function = "gpio"; // default:i2c
			};
			// spis { // delete: spis at 2021.05.29
			// 	ralink,group = "spis";
			// 	ralink,function = "gpio";
			// };
			wled_an {
				ralink,group = "wled_an";
				ralink,function = "wled_an";
			};
			ephy_p1 {
				ralink,group = "ephy_p1";
				ralink,function = "gpio";
			};
			ephy_p2 {	// delete: ephy2 at 2021.06.03
				ralink,group = "ephy_p2";
				ralink,function = "gpio";
			};
			ephy_p3 {
				ralink,group = "ephy_p3";
				ralink,function = "gpio";
			};
			// ephy_p4 { // delete: ephy4 at 2021.05.29
			// 	ralink,group = "ephy_p4";
			// 	ralink,function = "gpio";
			// };
			wdt {
				ralink,group = "wdt";
				ralink,function = "gpio";
			};
		};
	};

	palmbus@10000000 {
		spi@b00 {
			status = "okay";

			pinctrl-names = "default";
			pinctrl-0 = <&spi_pins>, <&spi_cs1_pins>;

			m25p80@0 {
				#address-cells = <1>;
				#size-cells = <1>;
				compatible = "w25q128";
				reg = <0 0>;
				linux,modalias = "m25p80", "w25q128";
				spi-max-frequency = <40000000>;
				m25p,chunked-io = <31>;

				partition@0 {
					label = "u-boot";
					reg = <0x0 0x30000>;
					read-only;
				};

				partition@30000 {
					label = "u-boot-env";
					reg = <0x30000 0x10000>;
				};

				factory: partition@40000 {
					label = "factory";
					reg = <0x40000 0x10000>;
				};

				partition@50000 {
					label = "firmware";
					reg = <0x50000 0x0fb0000>;
				};
			};

			spidev@1 {
				#address-cells = <1>;
				#size-cells = <1>;
				compatible = "spidev";
				reg = <1 0>;
				spi-max-frequency = <1000000>;
			};
		};

		i2c@900 {
			status = "disabled";
		};

		uartlite@c00 {
			rts-gpio = <&gpio0 11 0>;
			rs485-rts-active-high;
			rs485-rts-delay = <0 0>;
			linux,rs485-enabled-at-boot-time;
			status = "okay";
		};

		uart1@d00 { // add: uart1 for rs485 at 2021.05.29
			rts-gpio = <&gpio0 0 0>;
			rs485-rts-active-high;
			rs485-rts-delay = <0 0>;
			linux,rs485-enabled-at-boot-time;
			status = "okay";
		};

		uart2@e00 { // update: uart2 on for gps at 2021.06.03
			status = "okay";
		};

		pwm@5000 { // update: pwm off at 2021.06.03
			status = "disabled";
		};

		gpio-leds {
			compatible = "gpio-leds";
			online {
				label = "rtu:online";
				gpios = <&gpio1 15 1>;
			};
			lora {
				label = "rtu:lora";
				gpios = <&gpio1 14 1>;
			};
			ec20xpower {
				label = "rtu:ec20xpower";
				gpios = <&gpio1 5 1>;
			};
		};
	};

	ethernet@10100000 {
		mtd-mac-address = <&factory 0x28>;
	};

	sdhci@10130000 { // update: sdhci off at 2021.06.03
		status = "disabled";
		mediatek,cd-low;
	};
        gpio-keys-polled {
                compatible = "gpio-keys-polled";
                #address-cells = <1>;
                #size-cells = <0>;
                poll-interval = <20>;
                wps {
                        label = "reset";
                        gpios = <&gpio1 6 1>;
                        linux,code = <0x211>;
                };
        };

};
